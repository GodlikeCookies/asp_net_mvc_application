@model List<Category>

<partial name="_Notification" />
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Редактор категорий</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Добавить</a>
        </div>
    </div>
</div>
@if (Model.Count == 0)
{
    <h5 class="text-center text-danger">Список категорий пуст</h5>
}
else 
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Название категории</th>
                <th>Порядок отображения</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(x => x.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="width: 210px">
                                <i class="bi bi-pencil-square"></i> Редактировать
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2" style="width: 210px">
                                <i class="bi bi-trash3-fill"></i> Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}