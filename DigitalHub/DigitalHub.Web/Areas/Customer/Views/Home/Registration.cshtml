<form method="post" asp-controller="Verification", asp-action="Registration">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="container text-center" style="margin-top: 100px">
        <h1>Регистрация</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <hr />
                <div class="mb-2 row p-1">
                    <label class="col-auto">Имя пользователя</label>
                    <input class="form-control" />

                </div>
                <div class="mb-2 row p-1">
                    <label class="col-auto">Пароль</label>
                    <input class="form-control" type="password" />
                </div>
                <div class="p-4">
                    <button type="submit" class="btn btn-outline-primary form-control" style="width: auto">Регистрация</button>
                </div>

            </div>
        </div>
    </div>
</form>